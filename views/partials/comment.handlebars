<!-- views/partials/comment.handlebars -->

<div class="card">
  <div class="card-block">
    <h4 class="card-date">{{this.date}}</h4>
    <p class="card-text">{{this.commentary}}</p>
    <!-- Delete link -->
    <p><form method="POST" action="/entries/comments/{{this._id}}?_method=DELETE">
      <button class="btn btn-link" type="submit">Delete</button>
    </form></p>
  </div>
</div>
