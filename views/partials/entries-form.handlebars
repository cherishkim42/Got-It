<fieldset>

  <legend>Entry</legend>

  <!-- TITLE -->
  <p>
    <label for="entry-title">Date</label><br>
    <input id="entry-title" type="text" name="title" value="{{entry.title}}"/>
  </p>

  <!-- RATING -->
  <p>
    <label>Rating of Productivity</label><br>
    <select name="rating">
      <option value="Rating">Rating</option>
      <option value="0/5">0/5</option>
      <option value="1/5">1/5</option>
      <option value="2/5">2/5</option>
      <option value="3/5">3/5</option>
      <option value="4/5">4/5</option>
      <option value="5/5">5/5</option>
    </select>
  </p>

  <!-- TAG(S) -->
  <p>
    <label for="entry-tags">Tags</label><br>
    <input type="text" name="tagsString" value="{{tagsString}}">
  </p>

</fieldset>
